    <icon path="assets/Icon-72@2x.png" size="144" unless="android"></icon>
    <icon path="assets/Icon-76.png" size="76" unless="android"></icon>
    <icon path="assets/Icon-76@2x.png" size="152" unless="android"></icon>


    <icon path="assets/36.png" size="36" if="android"></icon>
    <icon path="assets/48.png" size="48" if="android"></icon>
    <icon path="assets/72.png" size="72" if="android"></icon>
